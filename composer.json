{
    "name": "ex-akt/contao-style-bricks-bundle",
    "type": "contao-bundle",
    "description": "Style Bricks Bundle for Contao",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Samuel Heer",
            "homepage": "https://github.com/samuelheer"
        }
    ],
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require": {
        "contao/core-bundle": "^4.9 || ^5.0",
        "nutshell-framework/nutshell":"^2.0",
        "nutshell-framework/hero-element":"^1.2",
        "erdmannfreunde/contao-grid-bundle": "^2.0",
        "oveleon/contao-component-style-manager": "^3.2",
        "inspiredminds/contao-glightbox": "^1.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "ExAkt\\ContaoStyleBricksBundle\\ContaoManager\\Plugin"
    },
    "suggest": {
        "inspiredminds/contao-wowjs": "^1.0",
        "oveleon/contao-cookiebar": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "ExAkt\\ContaoStyleBricksBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExAkt\\ContaoStyleBricksBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/ex-akt/contao-style-bricks-bundle/issues",
        "source": "https://github.com/ex-akt/contao-style-bricks-bundle"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": true,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
